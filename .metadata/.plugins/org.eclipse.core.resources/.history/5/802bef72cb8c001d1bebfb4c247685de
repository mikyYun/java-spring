package ch20;

public class CharArrayTest {

	public static void main(String[] args) {

		char[] alphs = new char[26];
		char ch = 'A';
		
		for (int i = 0; i < alphs.length; i ++) {
			alphs[i] = ch ++;
		
		}
		
		for (char alpha : alphs) {
			System.out.println(alpha + ", " + (int)alpha);
		}
	
		System.out.println(--ch + ", " + ++ch);
	}

}
